#!/usr/bin/env bash
set -e

bin/build

if [ "$#" == 0 ]; then
  bundle exec parallel_cucumber features
else
  bundle exec parallel_cucumber "$@"
fi

find . -name 'coverage*.cov' -print0 | xargs -0 gocovmerge > cov.cov
find . -name 'coverage*.cov' -print0 | xargs -0 -L 1 rm
mv cov.cov coverage.cov
echo DONE
